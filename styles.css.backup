/* ChatGPT Extension Helper Styles */

.chatgpt-extension-sidebar {
    position: fixed;
    top: 0;
    right: 0;
    width: 350px;
    height: 100vh;
    background: #fff;
    border-left: 2px solid #e5e7eb;
    box-shadow: -4px 0 12px rgba(0, 0, 0, 0.1);
    z-index/* Message Conversation Styles */
.message-conversation-section {
    margin-bottom: 20px;
    border: 2px solid #10a37f;
    border-radius: 12px;
    overflow: hidden;
    background: white;
}

.conversation-header {
    background: #10a37f;
    color: white;
    padding: 12px 16px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.conversation-header h4 {
    margin: 0;
    font-size: 14px;
    font-weight: 600;
}

.minimize-conversation {
    background: none;
    border: none;
    color: white;
    font-size: 16px;
    cursor: pointer;
    width: 20px;
    height: 20px;
    border-radius: 3px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.minimize-conversation:hover {
    background: rgba(255, 255, 255, 0.2);
}

.conversation-content {
    max-height: 400px;
    overflow-y: auto;
    padding: 16px;
}

.qa-pair {
    margin-bottom: 20px;
    padding-bottom: 16px;
    border-bottom: 1px solid #f3f4f6;
}

.qa-pair:last-child {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: none;
}

.qa-pair.pending {
    opacity: 0.9;
}

.chatgpt-extension-sidebar.minimized .sidebar-header {
    padding: 15px 5px;
    text-align: center;
}

.chatgpt-extension-sidebar.minimized .sidebar-header h3,
.chatgpt-extension-sidebar.minimized .sidebar-controls,
.chatgpt-extension-sidebar.minimized .sidebar-content {
    display: none;
}

.chatgpt-extension-sidebar.minimized .sidebar-resize-handle {
    display: none;
}

.sidebar-header {
    background: #10a37f;
    color: white;
    padding: 15px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #0d8b6b;
    position: relative;
}

.sidebar-header h3 {
    margin: 0;
    font-size: 16px;
    font-weight: 600;
    flex: 1;
}

.sidebar-controls {
    display: flex;
    gap: 5px;
}

.sidebar-control-btn {
    background: rgba(255, 255, 255, 0.2);
    border: none;
    color: white;
    font-size: 16px;
    cursor: pointer;
    padding: 4px 8px;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 24px;
    height: 24px;
    transition: background 0.2s ease;
}

.sidebar-control-btn:hover {
    background: rgba(255, 255, 255, 0.3);
}

.sidebar-resize-handle {
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 4px;
    background: transparent;
    cursor: ew-resize;
    z-index: 10001;
}

.sidebar-resize-handle:hover {
    background: rgba(16, 163, 127, 0.3);
}

.sidebar-content {
    flex: 1;
    overflow-y: auto;
    padding: 20px;
}

.welcome-message {
    text-align: center;
    color: #666;
    padding: 20px 0;
}

.welcome-message p {
    margin: 10px 0;
    line-height: 1.4;
}

.sidebar-response {
    margin-bottom: 20px;
    padding: 15px;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    background: #f9fafb;
}

.sidebar-response.loading {
    border-color: #10a37f;
    background: #f0fdf9;
}

.sidebar-response.error {
    border-color: #ef4444;
    background: #fef2f2;
}

.response-header {
    margin-bottom: 12px;
}

.response-question {
    background: #fff;
    padding: 8px 12px;
    border-radius: 6px;
    border: 1px solid #d1d5db;
    margin-top: 6px;
    font-size: 14px;
    line-height: 1.4;
}

.response-content {
    margin-bottom: 8px;
}

.response-text {
    background: #fff;
    padding: 12px;
    border-radius: 6px;
    border: 1px solid #d1d5db;
    margin-top: 6px;
    font-size: 14px;
    line-height: 1.5;
    white-space: pre-wrap;
}

.error-text {
    background: #fff;
    padding: 12px;
    border-radius: 6px;
    border: 1px solid #ef4444;
    margin-top: 6px;
    font-size: 14px;
    line-height: 1.5;
    color: #dc2626;
}

.loading-spinner {
    text-align: center;
    padding: 20px;
    font-size: 16px;
    color: #10a37f;
    animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
    0%, 100% {
        opacity: 1;
    }
    50% {
        opacity: 0.6;
    }
}

.response-time {
    font-size: 12px;
    color: #9ca3af;
    text-align: right;
}

/* Reply button styles */
.extension-reply-button {
    background: #10a37f;
    color: white;
    border: none;
    border-radius: 6px;
    padding: 6px 12px;
    font-size: 12px;
    cursor: pointer;
    margin: 8px 0 0 8px;
    display: inline-flex;
    align-items: center;
    gap: 4px;
    transition: all 0.2s ease;
    font-weight: 500;
}

.extension-reply-button:hover {
    background: #0d8b6b;
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(16, 163, 127, 0.3);
}

.extension-reply-button:active {
    transform: translateY(0);
    box-shadow: 0 1px 4px rgba(16, 163, 127, 0.3);
}

/* Responsive design for smaller screens */
@media (max-width: 1200px) {
    .chatgpt-extension-sidebar {
        width: 300px;
    }
}

@media (max-width: 900px) {
    .chatgpt-extension-sidebar {
        width: 100vw;
        right: -100vw;
        transition: right 0.3s ease;
    }
    
    .chatgpt-extension-sidebar.mobile-open {
        right: 0;
    }
}

/* Dark mode support */
@media (prefers-color-scheme: dark) {
    .chatgpt-extension-sidebar {
        background: #1f2937;
        border-left-color: #374151;
        color: #f9fafb;
    }
    
    .sidebar-response {
        background: #111827;
        border-color: #374151;
    }
    
    .response-question,
    .response-text {
        background: #374151;
        border-color: #4b5563;
        color: #f9fafb;
    }
    
    .sidebar-response.loading {
        background: #064e3b;
        border-color: #10b981;
    }
    
    .sidebar-response.error {
        background: #7f1d1d;
        border-color: #ef4444;
    }
    
    .error-text {
        background: #374151;
        border-color: #ef4444;
        color: #fca5a5;
    }
}

/* Integration with ChatGPT interface */
body:has(.chatgpt-extension-sidebar:not(.minimized)) {
    margin-right: var(--sidebar-width, 350px);
    transition: margin-right 0.3s ease;
}

body:has(.chatgpt-extension-sidebar.minimized) {
    margin-right: 50px;
}

/* Extension elements have higher z-index than ChatGPT elements */
.extension-reply-button,
.chatgpt-extension-sidebar,
.extension-question-dialog {
    z-index: 9999 !important;
}

/* Question Popover Styles */
.extension-question-popover {
    position: absolute;
    z-index: 10002;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    border: none;
    background: transparent;
    padding: 0;
    margin: 0;
}

.extension-question-popover::backdrop {
    background: rgba(0, 0, 0, 0.1);
}

.popover-content {
    background: white;
    border: 2px solid #10a37f;
    border-radius: 12px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    overflow: hidden;
    width: 350px;
    max-width: 90vw;
}

.popover-header {
    background: #10a37f;
    color: white;
    padding: 12px 16px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-weight: 600;
}

.popover-header span {
    font-weight: 600;
    font-size: 14px;
}

.popover-close {
    background: none;
    border: none;
    color: white;
    font-size: 18px;
    cursor: pointer;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.popover-close:hover {
    background: rgba(255, 255, 255, 0.2);
}

.popover-body {
    padding: 16px;
}

.question-input {
    width: 100%;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    padding: 12px;
    font-size: 14px;
    resize: vertical;
    font-family: inherit;
    box-sizing: border-box;
}

.question-input:focus {
    outline: none;
    border-color: #10a37f;
}

.popover-actions {
    margin-top: 12px;
    display: flex;
    gap: 8px;
    justify-content: flex-end;
}

.ask-button {
    background: #10a37f;
    color: white;
    border: none;
    border-radius: 6px;
    padding: 8px 16px;
    cursor: pointer;
    font-weight: 500;
}

.ask-button:hover {
    background: #0d8b6b;
}

.cancel-button {
    background: #f3f4f6;
    color: #374151;
    border: 1px solid #d1d5db;
    border-radius: 6px;
    padding: 8px 16px;
    cursor: pointer;
}

.cancel-button:hover {
    background: #e5e7eb;
}

.popover-error {
    background: #fef2f2;
    color: #dc2626;
    padding: 8px 12px;
    border-radius: 6px;
    margin-top: 8px;
    font-size: 12px;
    border: 1px solid #fca5a5;
}

