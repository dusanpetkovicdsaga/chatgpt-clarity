    width: 24px;
    height: 24px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    background: #f3f4f6;
}

.ai-avatar {
    background: #10a37f;
}

.ai-avatar.error {
    background: #ef4444;
}

.question-content,
.response-content,
.error-content {
    margin-left: 32px;
    line-height: 1.6;
}

.question-display {
    background: #f8f9fa;
    padding: 12px;
    border-radius: 12px;
    border: 1px solid #e5e7eb;
    margin-bottom: 12px;
}

.response-display {
    background: #f0fdf9;
    padding: 12px;
    border-radius: 12px;
    border: 1px solid #d1fae5;
    margin-bottom: 8px;
}

.response-display.error {
    background: #fef2f2;
    border-color: #fca5a5;
}

.response-display.thinking {
    background: #f0f9ff;
    border-color: #bae6fd;
}

/* Thinking Animation */
.thinking-content {
    margin-left: 32px;
    padding: 12px 0;
}

.thinking-dots {
    display: flex;
    gap: 4px;
    align-items: center;
}

.thinking-dots span {
    width: 8px;
    height: 8px;
    background: #10a37f;
    border-radius: 50%;
    animation: thinkingPulse 1.4s ease-in-out infinite both;
}

.thinking-dots span:nth-child(1) { animation-delay: -0.32s; }
.thinking-dots span:nth-child(2) { animation-delay: -0.16s; }
.thinking-dots span:nth-child(3) { animation-delay: 0s; }

@keyframes thinkingPulse {
    0%, 80%, 100% {
        transform: scale(0.8);
        opacity: 0.5;
    }
    40% {
        transform: scale(1);
        opacity: 1;
    }
}

