{
  "manifest_version": 3,
  "name": "ChatGPT Clarity",
  "version": "1.0",
  "description": "Ask follow-up questions to any ChatGPT message in a side panel. Get deeper insights and continue conversations seamlessly without losing context.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ChatGPT Clarity - Ask Follow-up Questions"
  },
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "sidebar.js", "styles.css"],
      "matches": ["https://chatgpt.com/*"]
    }
  ]
}